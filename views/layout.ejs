    <link rel="stylesheet" href="/linker/styles/topcoat-mobile-dark.css">
    <link rel="stylesheet" href="/linker/styles/app.css">
    <!--STYLES END-->
  </head>

  <body ng-controller="MainCtrl">

    <div ng-view ng-class="slide">
        <%- body %>
    </div>





    <!--SCRIPTS-->
    <script src="/linker/js/lib/jquery.js"></script>
    <script src="/linker/js/lib/angular.js"></script>
    <script src="/linker/js/lib/socket.io.js"></script>
