    <script src="/linker/js/lib/angular-animate.js"></script>
    <script src="/linker/js/lib/angular-resource.js"></script>
    <script src="/linker/js/lib/angular-route.js"></script>
    <script src="/linker/js/lib/angular-touch.js"></script>
    <script src="/linker/js/angular/controllers.js"></script>
    <script src="/linker/js/angular/rest-services.js"></script>
    <script src="/linker/js/app.js"></script>
    <!--SCRIPTS END-->

     <!--TEMPLATES-->
     <script type="text/javascript" src="/partials.js"></script>
     <!--TEMPLATES END-->
